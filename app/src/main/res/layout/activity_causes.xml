<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vaccinebg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="108dp"
        android:layout_height="21dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/curved_title"
        android:text="Causes"
        android:textAlignment="center"
        android:textColor="#0C0C0C"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:text="back to menu"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="412dp"
        android:layout_height="620dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="-1dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/biginT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/main_title"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/bigin_title"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/biginB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bigin_body"
                android:paddingStart="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="15dp"
                android:background="@drawable/curved_rexsmall"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/whatT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/whatT"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/main_title"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                />
            <TextView
                android:id="@+id/whatB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/whatB"
                android:paddingStart="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="15dp"
                android:background="@drawable/curved_rexsmall"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/lastT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lastT"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/main_title"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                />
            <TextView
                android:id="@+id/lastB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lastB"
                android:paddingStart="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="15dp"
                android:background="@drawable/curved_rexsmall"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/sourcesT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sourcesT"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/main_title"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                />
            <TextView
                android:id="@+id/sourcesB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sourcesB"
                android:paddingStart="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="15dp"
                android:background="@drawable/curved_rexsmall"
                android:textColor="@color/white"
                />


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>